<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/image_w_size_lancamento"
            android:layout_height="@dimen/image_h_size_lancamento"
            app:srcCompat="@drawable/ic_check_circle_black_24dp"
            android:id="@+id/imageViewIcon"
            android:layout_weight="1"
            android:padding="@dimen/default_padding" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/default_padding">

            <TextView
                android:text="Curso de Android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewLancamento"
                android:textStyle="normal|bold"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:text="Pagamento: 01/01/2001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPagamento" />

            <TextView
                android:text="Vencimento: 01/01/2001"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewVencimento" />

            <TextView
                android:text="Pago R$8888,00 de R$8888,00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewPago"
                android:layout_column="0"
                android:layout_row="0"
                android:gravity="right"
                android:textColor="@android:color/holo_green_dark" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>